[
  {
    "name": "help-requests",
    "trigger": "event",
    "if": {
      "event-match": {
        "key": "user-interaction",
        "value": "open help modal"
      }
    },
    "then": [
      {
        "do": "send-email",
        "with": {
          "from": "{{.Event.TargetDevice.DeviceID}}@byu.edu",
          "to": [
            "matt_blodgett@byu.edu",
            "danny_randall@byu.edu",
            "joe_blodgett@byu.edu"
          ],
          "subject": "Help request in {{.Event.AffectedRoom.RoomID}}",
          "body": "This is a message for **matt blodgett** from {{.Event.GeneratingSystem}}",
          "smtp-addr": "gateway.byu.edu:25",
          "user": "",
          "pass": ""
        }
      },
      {
        "do": "send-slack",
        "with": {
          "title": "Test",
          "text": "Test message in {{.Event.AffectedRoom.RoomID}} from {{.Event.GeneratingSystem}}"
        }
      }
    ]
  },
  {
    "name": "help-requests-timer",
    "trigger": "interval: 5s",
    "if": {},
    "then": [
      {
        "do": "send-email",
        "with": {
          "from": "mitchell_anderson@byu.edu",
          "to": ["danny_randall@byu.edu"],
          "subject": "Help request in {{.Event.AffectedRoom.RoomID}}",
          "body": "This is a message for **matt blodgett** from {{.Event.GeneratingSystem}}",
          "smtp-addr": "gateway.byu.edu:25",
          "user": "",
          "pass": ""
        }
      }
    ]
  }
]
