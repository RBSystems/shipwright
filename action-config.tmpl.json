[
  {
    "trigger": "event",
    "if": {
      "event-match": {
        "key": "help-request",
        "value": "confirm"
      }
    },
    "then": [
      {
        "do": "send-email",
        "with": {
          "recipients": [
            "matt_blodgett@byu.edu",
            "danny_randall@byu.edu",
            "joe_blodgett@byu.edu"
          ],
          "sender": "{{.Event.DeviceID}}@byu.edu",
          "user": "",
          "pass": "",
          "subject": "Cabinet Opened in {{.Event.RoomID}} // TODO these fields use go's templating engine",
          "body": "A cabinet was opened in {{.Event.RoomID}} at {{.Timestamp}}.",
          "smtp-addr": "gateway.byu.edu:25"
        }
      }
    ]
  }
]
