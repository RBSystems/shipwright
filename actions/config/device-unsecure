[{"name":"device-unsecure-add-alert","trigger":"event","if":{"event-match":{"key":"secure","value":"False"}},"then":[{"do":"upsert-alert","with":{"buildingID":"{{.Event.TargetDevice.BuildingID}}","roomID":"{{.Event.TargetDevice.RoomID}}","deviceID":"{{.Event.TargetDevice.DeviceID}}","type":"Device Unsecure","category":"Security","severity":"Critical","message":"{{.Event.TargetDevice.DeviceID}} is reporting a device unsecure","data":"{{.Event.Data}}","active":true}}]},{"name":"device-unsecure-alert-init","trigger":"alert-init","if":{"alert-match":{"type":"Device Unsecure"}},"then":[{"do":"add-action","with":{"name":"device-secure-{{.Alert.DeviceID}}","trigger":"event","if":{"event-match":{"key":"secure","value":"True","target-device":{"deviceID":"{{.Alert.DeviceID}}"}}},"then":[{"do":"upsert-alert","with":{"deviceID":"[[.Event.TargetDevice.DeviceID]]","type":"Device Unsecure","category":"Security","active":false,"message":"[[.Event.TargetDevice.DeviceID]] Device Unsecure signal has cleared"}}]}}]}]