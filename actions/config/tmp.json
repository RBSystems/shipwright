[
  {
    "name": "Joe-Test",
    "trigger": "skip",
    "if": {
      "state-query": {
        "query": "'DeviceID' == 'ITB-1101-CP1'",
        "cache-name": "default"
      }
    },
    "then": [
      {
        "do": "add-alert",
        "with": {
          "alert": "hi",
          "type": "missing heartbeat",
          "msg log": ["something went wrong with {{.StaticDevice.DeviceID}}"],
          "severity": "test"
        }
      }
    ]
  },
  {
    "name": "Joe-Test",
    "trigger": "event",
    "if": {
      "event-match": {
        "key": "secure",
        "value": "False"
      }
    },
    "then": [
      {
        "do": "add-alert",
        "with": {
          "alert": "system",
          "type": "open-cabinet",
          "msg log": ["something went wrong with {{.StaticDevice.DeviceID}}"],
          "severity": "critical"
        }
      }
    ]
  }
]
